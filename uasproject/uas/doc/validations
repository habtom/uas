email_alias_validation
if (!valid_string_length(local_part) or !is_string(local_part))
        error("Should not exceed the allowed string length AND should be string");
else if(!is_valid_email(destination))
        error("destination should be provided as a valid email adress");
else
        proceed_to_next_step;




