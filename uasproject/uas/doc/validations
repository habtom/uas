ftp_account_validation
if is_number(up_bandwidth) AND less_than_default(up_bandwidth)
        error("Upld Bandwidth should be specified in Number AND Should not be less than the default");
else if (is_number(dl_bandwidth) AND less_than_default(dl_bandwidth))
        error("Dld Bandwidth should be specified in Number AND Should not be less than the default");
else if(!is_ip_format(ip_access))
        error("ip_access: It should be given in IP Address format");
else if (!is_number(quota_file) OR less_than_default_quota_file(quota_file))
        error("Quota file should be specified in number AND not be less than the default size");
else
        proceed_to_next_step;


