unix_account_validation
if !domain_name(host_name) or !ip_address(host_name)
        error("host_name should be written as either domain name or ip address format);
else if !is_number(quota) AND less_than_default(quota)
        error("Quota should not be less than the default value AND it should be given in number format);
else
        pass_to_the_next_step;


